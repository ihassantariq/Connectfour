<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyButton">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">2dp</item>
	    <item name="android:textSize">20dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>
	<style name="MyButtonMed">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">2dp</item>
	    <item name="android:textSize">15dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:padding">3dp</item>
	</style>
	<style name="MyButtonSmall">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">2dp</item>
	    <item name="android:textSize">12dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:padding">2dp</item>
	</style>
    <style name="MyButtonVSmall">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">1dp</item>
	    <item name="android:textSize">10dp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:padding">1dp</item>
	</style>
   
    
    
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">#034F70</item>
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:padding">4dp</item>
         <item name="android:windowNoTitle">true</item>
    </style>
    <style name="LabelText"  parent="@android:style/TextAppearance.Medium">
         <item name="android:textColor">#FFF</item>
         <item name="android:textSize">12sp</item>

    </style>
     <style name="LabelTextMed"  parent="@android:style/TextAppearance.Medium">
         <item name="android:textColor">#FFF</item>
         <item name="android:textSize">14sp</item>

    </style>
     <style name="LabelTextSmall"  parent="@android:style/TextAppearance.Medium">
         <item name="android:textColor">#FFF</item>
         <item name="android:textSize">10sp</item>
    </style>
    
    
    <style name="NormalText"  parent="@android:style/TextAppearance.Medium">
         <item name="android:textColor">#FFF</item>
         <item name="android:textSize">18sp</item>

    </style>
    
    
    <style name="NormalTextSmall"  parent="@android:style/TextAppearance.Medium">
         <item name="android:textColor">#FFF</item>
         <item name="android:textSize">11sp</item>

    </style>
    
    
    <style name="MyRadio" parent="@android:style/Widget.CompoundButton.RadioButton">
  	 	<item name="android:button">@drawable/radio</item>
  	 	<item name="android:paddingLeft">60dp</item>
  	 	<item name="android:paddingBottom">12dp</item>
  	 	<item name="android:paddingTop">12dp</item>
	</style>
    
      <style name="MyRadioSmall" parent="@android:style/Widget.CompoundButton.RadioButton">
  	 	<item name="android:button">@drawable/radio</item>
  	 	<item name="android:paddingLeft">26dp</item>
  	 	<item name="android:paddingBottom">1dp</item>
  	 	<item name="android:paddingTop">1dp</item>
  	 	<item name="android:textSize">10dp</item>
	</style>

	<color name="AccentColor">#cc0000</color>
	<color name="PopupColor">@color/AccentColor</color>
	<color name="PopupTextColor">#ffffff</color>
	<color name="ButtonTextColor">#ffffff</color>
	<color name="BlurbColor">#a0a0a0</color>
	<color name="SignOutButtonBackground">#e0e0e0</color>
	<color name="SignOutButtonTextColor">#404040</color>

	<dimen name="TitleSize">30sp</dimen>

	<style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen" />

	<style name="GameScreen">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:gravity">center</item>
		<item name="android:visibility">gone</item>
	</style>

	<style name="LLScreen" parent="@style/GameScreen">
		<item name="android:orientation">vertical</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="GameplayScreen" parent="@style/LLScreen">
		<item name="android:gravity">center</item>
	</style>


	<style name="InvPopup" parent="@style/LLScreen">
		<item name="android:background">@color/PopupColor</item>
		<item name="android:padding">10dp</item>
		<item name="android:layout_gravity">top|right</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="GameTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:text">@string/game_title</item>
		<item name="android:textColor">@color/AccentColor</item>
		<item name="android:textSize">@dimen/TitleSize</item>
		<item name="android:layout_marginBottom">40dp</item>
	</style>

	<style name="Blurb">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/BlurbColor</item>
	</style>

	<style name="GameBlurb" parent="@style/Blurb">
		<item name="android:text">String</item>
		<item name="android:layout_marginBottom">40dp</item>
	</style>

	<style name="SignInButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">40dp</item>
	</style>

	<style name="GameButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@color/AccentColor</item>
		<item name="android:textColor">@color/ButtonTextColor</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="MainScreenButton" parent="@style/GameButton">
		<item name="android:layout_marginBottom">10dp</item>
	</style>

	<style name="MainScreenButtonBlurb" parent="@style/GameBlurb">
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="InvPopupText">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textColor">@color/PopupTextColor</item>
		<item name="android:text">@string/inv_popup_text</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="InvPopupButton" parent="@style/GameButton">
		<item name="android:background">@color/ButtonTextColor</item>
		<item name="android:textColor">@color/AccentColor</item>
	</style>

	<style name="SignOutButton" parent="@style/GameButton">
		<item name="android:background">@color/SignOutButtonBackground</item>
		<item name="android:textColor">@color/SignOutButtonTextColor</item>
	</style>

	<style name="FigureView">
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_height">150dp</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="FigureLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="ScoreToast">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="ScoresBox">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">#f0f0f0</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">30dp</item>
		<item name="android:padding">20dp</item>
	</style>

	<style name="ButtonsBox">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:padding">20dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="ScoreText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:gravity">left</item>
	</style>

	<style name="Instructions" parent="@style/Blurb">
		<item name="android:layout_marginBottom">20dp</item>
	</style>

	<style name="ScoreLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="ScoreDisplay">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/AccentColor</item>
		<item name="android:layout_marginBottom">10dp</item>
	</style>

	<style name="PlacementDisplay">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/BlurbColor</item>
	</style>

	<style name="SectionLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/AccentColor</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_marginBottom">20dp</item>
	</style>
    
</resources>

