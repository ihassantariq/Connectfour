<?xml version="1.0" encoding="utf-8"?>


<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<ImageView
		android:src="@drawable/wood"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scaleType="fitXY"
		android:id="@+id/background_image"
	
	/>
	
	
	
	

 	<com.convension.connectfour.views.DecorView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>
		 
	<View
		android:background="@drawable/dark_rectangle"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"></View>
	
	

	<LinearLayout android:orientation="vertical"
		 android:layout_width="fill_parent"
		android:layout_gravity="center"
		android:gravity="center"
		 android:layout_height="fill_parent"
		  
    	>

<LinearLayout android:orientation="vertical"
		 android:layout_width="fill_parent"
		android:layout_gravity="center"
		android:gravity="center"
		 android:layout_height="wrap_content"
		
		 android:layout_weight="2"
		  
    	>

 <TextView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:text="@string/msg_players"
		android:gravity="center"
		style="@style/LabelText"
		
		
		/>
		 
		 
		 <LinearLayout android:orientation="horizontal"
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		android:gravity="center"
		
		
		 >
		 
		 
		 
		 
	 <RadioGroup
	        android:id="@+id/radio_play"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:paddingBottom="1dp"
	        android:paddingRight="10dp"
  >
	 
	        <RadioButton
	            android:id="@+id/radio_play0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             style="@style/MyRadio"
	            android:text="1 player" 
	            android:checked="true" />
	 
	        <RadioButton
	            android:id="@+id/radio_play1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             style="@style/MyRadio"
	            android:text="2 player" />
	            
	           
	 
	    </RadioGroup>




	 <RadioGroup
	        android:id="@+id/radio_turn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:paddingBottom="2dp"
	       
	
   >
	 
	        <RadioButton
	            android:id="@+id/radio_turn0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             style="@style/MyRadio"
	            android:text="Go first" 
	            android:checked="true" />
	 
	        <RadioButton
	            android:id="@+id/radio_turn1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             style="@style/MyRadio"
	            android:text="Go second" />
	            
	           
	 
	    </RadioGroup>
			
			
			</LinearLayout>


</LinearLayout>





	<LinearLayout android:orientation="vertical"
			 android:layout_width="fill_parent"
			android:layout_gravity="center"
			android:gravity="center"
			 android:layout_height="wrap_content"
			  android:layout_weight="2"
			>


			<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/msg_diff"
			style="@style/LabelText"
			android:gravity="center"
			android:layout_gravity="center"


			/>


				 <LinearLayout android:orientation="horizontal"
			 android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			android:gravity="center"


			 >



		 <RadioGroup
				android:id="@+id/radio_diff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="10dp"

		>

				<RadioButton
					android:id="@+id/radio_diff0"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="easy"
					style="@style/MyRadio"
					android:checked="true" />

				<RadioButton
					android:id="@+id/radio_diff1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 style="@style/MyRadio"
					android:text="medium" />

					<RadioButton
					android:id="@+id/radio_diff2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 style="@style/MyRadio"
					android:text="hard" />

			</RadioGroup>

				 <RadioGroup
				 android:paddingLeft="5dp"
				android:id="@+id/radio_power"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				 android:layout_gravity="center"
				 android:paddingTop="10dp"
				 >

				<RadioButton
					android:id="@+id/radio_power0"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 style="@style/MyRadio"
					android:text="Powerball on"
					android:checked="true" />

				<RadioButton
					android:id="@+id/radio_power1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 style="@style/MyRadio"
					android:text="Powerball off" />



			</RadioGroup>

				</LinearLayout>

				</LinearLayout>


			<LinearLayout android:orientation="vertical"
				 android:layout_width="match_parent"
				android:layout_gravity="center"
				android:gravity="center"
				 android:layout_height="wrap_content"
				android:weightSum="4"
				  android:layout_weight="2">



				 <Button
					android:id="@+id/play_button"
					android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:text="Play"
					android:layout_weight="1"
					android:background="@drawable/greenbutton"
					style="@style/MyButton"
					android:maxWidth="400dp"
					android:minWidth="200dp"/>
				<Button
					android:id="@+id/multiplayer_button"
					android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:text="Multiplayer"
					android:background="@drawable/greenbutton"
					style="@style/MyButton"
					android:maxWidth="400dp"
					android:minWidth="200dp"
					/>
				<Button
				android:id="@+id/open_settings"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:text="Settings"
				android:background="@drawable/greenbutton"
				style="@style/MyButton"
				android:maxWidth="400dp"
					android:minWidth="200dp"/>


				 <Button
					android:id="@+id/open_help"
					 android:layout_width="wrap_content"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:text="Help"
					android:background="@drawable/greenbutton"
					style="@style/MyButton"
					android:maxWidth="400dp"
					android:minWidth="200dp"
				/>

			</LinearLayout>

	</LinearLayout>


</FrameLayout>

